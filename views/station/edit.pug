extends ../layout

block content
  header
    style.
      .s.container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      h1 {
        text-align: center;
      }

      form.s {
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 5px;
      }

      input.s {
        margin-bottom: 10px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
      }

      button.s {
        background-color: #007BFF;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
      }

      button.s:hover {
        background-color: #0056b3;
      }

      p {
        text-align: center;
        color: red;
      }
  .s.container
    h1= title

    form.s(action=`/stations/edit/${station._id}`, method='post')
      label(for='name') Station Name:
      input.s(type='text', name='name', value= station.name, required)

      label(for='code') Station Code:
      input.s(type='text', name='code', value= station.code, required)

      button.s(type='submit') Update

