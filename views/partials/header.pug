nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    a.navbar-brand(href='/')
      //- img.d-inline-block.align-text-top(src='/bootstrap-logo.svg' alt='' width='30' height='24')
      |  Train Ticket
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarColor01' aria-controls='navbarColor01' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarColor01.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(class=(title === 'Home') ? 'active' : '', href='/') Home
        li.nav-item
          a.nav-link(class=(title === 'My Tickets') ? 'active' : '', href='/tickets') My Tickets
        li.nav-item
          a.nav-link(class=(title === 'Available Trains') ? 'active' : '', href='/trains') Available Trains
        if user && user.role === 'admin'
          li.nav-item
            a.nav-link(class=(title === 'Dashboard') ? 'active' : '', href='/dashboard') Dashboard
        li.nav-item
          a.nav-link(class=(title === 'Contact') ? 'active' : '', href='/contact') Contact

      form.d-flex
        if !user
          a.btn.btn-outline-light.me-2(href='/login') Login
          a.btn.btn-outline-primary(href='/signup') Create Account
        else
          a.btn.btn-outline-primary.me-2(href='/account') My Account
          a.btn.btn-outline-danger(href='/logout') Sign out


